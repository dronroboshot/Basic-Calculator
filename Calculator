a  = input("Insert a number: ")
b  = input("Insert a second number: ")
operation = input('Insert an operation (+, -, *, /): ')

a = float(a)
b = float(b)

if operation == '+':
    result = a + b
elif operation == '-':
    result = a - b
elif operation == '*':
    result = a * b
elif operation == '/':
    if b != 0:
        result = a / b
    else:
        print('Error')
 
print('This is your number: ', result)
